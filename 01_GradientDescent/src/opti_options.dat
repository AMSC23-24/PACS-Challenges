# Optimization options
[optimization]
tol_res = 1.e-6
tol_step_length = 1.e-6
max_iter = 1000
opti_verbose = true

[step_size]
# options are: Armijo, Exponential, InverseDecay
method = Exponential
step_size_verbose = false
alpha_0 = 0.2
[./armijo]
sigma = 0.45
[./exponential_and_inverseDecay]
mu = 0.2

# Gradient computation method